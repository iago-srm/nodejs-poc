{
  "name": "nodejs-poc",
  "version": "1.0.0",
  "description": "A proof of concept of a very complete NodeJS API",
  "main": "index.js",
  "scripts": {
    "generate-initial-migration": "npx typeorm migration:generate -n Initial",
    "gen-env": "gen-env-types .env -o src/env.d.ts -e .",
    "build": "tsc",
    "dev": "cross-env NODE_ENV=development ts-node-dev --transpile-only --inspect=4321 --respawn -r tsconfig-paths/register src/index.ts",
    "start": "cross-env NODE_ENV=production node -r ts-node/register/transpile-only -r tsconfig-paths/register dist/src/index.js",
    "pretest": "docker-compose -f docker-compose-test.yaml up --detach --force-recreate",
    "test": "cross-env NODE_ENV=test jest --watchAll --no-cache --runInBand",
    "posttest": "docker container rm -f $(docker container ls -q -f name=nodejs-poc)",
    "docker:dev": "docker-compose -f docker-compose-dev.yaml up"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.12",
    "@types/express-locale": "^2.0.0",
    "@types/function-bind": "^1.1.6",
    "@types/i18next-fs-backend": "^1.0.0",
    "@types/jest": "^26.0.21",
    "@types/node": "^14.17.3",
    "@types/node-polyglot": "^2.4.1",
    "@types/pino": "^6.3.11",
    "@types/redis": "^2.8.29",
    "@types/supertest": "^2.0.10",
    "cross-env": "^7.0.3",
    "gen-env-types": "^1.0.5",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "typed-promisify": "^0.4.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "@iagosrm/common": "^1.0.16",
    "awilix": "^4.3.4",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^4.6.0",
    "pg": "^8.5.1",
    "pino": "^6.13.2",
    "pino-pretty": "^6.0.0",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.2.0",
    "ts-node": "^9.1.1",
    "typeorm": "^0.2.31",
    "typescript": "^4.3.2"
  }
}
